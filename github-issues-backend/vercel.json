{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://dacapomds.github.io" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS, HEAD" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Accept, Authorization" }
      ]
    }
  ]
}